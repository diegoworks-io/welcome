<div id="blueprint-shell" class="pointer-events-none absolute inset-0 z-0 overflow-hidden" aria-hidden="true">
  <svg class="bp-canvas" viewBox="0 0 1600 1000" preserveAspectRatio="xMidYMid slice" role="presentation">
    <defs>
      <pattern id="bp-grid-minor" x="0" y="0" width="28" height="28" patternUnits="userSpaceOnUse">
        <path d="M28 0H0V28" fill="none" stroke="rgba(255,255,255,0.045)" stroke-width="1" />
      </pattern>
      <pattern id="bp-grid-major" x="0" y="0" width="140" height="140" patternUnits="userSpaceOnUse">
        <path d="M140 0H0V140" fill="none" stroke="rgba(255,255,255,0.09)" stroke-width="1" />
      </pattern>
      <linearGradient id="bp-fade-v" x1="0" y1="0" x2="0" y2="1">
        <stop offset="0%" stop-color="rgba(255,255,255,0.02)" />
        <stop offset="50%" stop-color="rgba(255,255,255,0.16)" />
        <stop offset="100%" stop-color="rgba(255,255,255,0.02)" />
      </linearGradient>
      <filter id="bp-signal-glow" x="-80%" y="-80%" width="260%" height="260%">
        <feGaussianBlur stdDeviation="2.2" result="blur" />
        <feMerge>
          <feMergeNode in="blur" />
          <feMergeNode in="SourceGraphic" />
        </feMerge>
      </filter>
    </defs>

    <rect x="0" y="0" width="1600" height="1000" fill="url(#bp-grid-minor)" />
    <rect x="0" y="0" width="1600" height="1000" fill="url(#bp-grid-major)" />

    <g id="bp-stage1" class="bp-stage bp-stage1" fill="none" stroke-linecap="round" stroke-linejoin="round">
      <g class="s1-draw" stroke="rgba(255,255,255,0.4)" stroke-width="1.1">
        <rect id="s1-hero-frame" x="612" y="338" width="376" height="324" rx="18" fill="none" stroke="none" />
      </g>

      <g id="s1-net-links"></g>
      <g id="s1-net-nodes"></g>
      <g id="s1-flashes"></g>
      <g id="s1-flow-rings"></g>
      <g id="s1-flow-particles"></g>
    </g>

    <g id="bp-stage2" class="bp-stage bp-stage2" fill="none" stroke-linecap="round" stroke-linejoin="round">
      <g stroke="rgba(255,255,255,0.18)" stroke-width="1">
        <line x1="260" y1="240" x2="1340" y2="240" />
        <line x1="260" y1="500" x2="1340" y2="500" />
        <line x1="260" y1="760" x2="1340" y2="760" />
      </g>
      <g id="s2-net-links"></g>
      <g id="s2-net-nodes"></g>
      <g id="s2-flashes"></g>
      <g id="s2-flow-rings"></g>
      <g id="s2-flow-particles"></g>

    </g>

    <rect x="0" y="0" width="1600" height="1000" fill="url(#bp-fade-v)" opacity="0.06" />
  </svg>
</div>

<style>
  #blueprint-shell {
    background: #050505;
    opacity: 0.96;
    transition: transform 500ms ease, opacity 500ms ease;
  }

  .bp-canvas {
    width: 100%;
    height: 100%;
  }

  .bp-stage {
    transition: opacity 380ms ease, transform 520ms ease;
    transform-origin: center;
  }

  .bp-stage1 {
    opacity: 1;
    transform: translate3d(0, 0, 0) scale(1);
  }

  .bp-stage2 {
    opacity: 0;
    transform: translate3d(14px, 0, 0) scale(1.01);
  }

  #blueprint-shell.is-stage2 {
    opacity: 0.98;
    transform: scale(1.02);
  }

  #blueprint-shell.is-stage2 .bp-stage1 {
    opacity: 0.06;
    transform: translate3d(-16px, 0, 0) scale(0.992);
  }

  #blueprint-shell.is-stage2 .bp-stage2 {
    opacity: 0.94;
    transform: translate3d(0, 0, 0) scale(1);
  }

  #s1-net-links path {
    fill: none;
    stroke: rgba(128, 226, 255, 0.34);
    stroke-width: 1.1;
    stroke-linecap: round;
    stroke-linejoin: round;
    opacity: 0.9;
    filter: url(#bp-signal-glow);
  }

  #s1-net-nodes .node-outer {
    fill: none;
    stroke: rgba(188, 244, 255, 0.9);
    stroke-width: 1.3;
    filter: url(#bp-signal-glow);
  }

  #s1-net-nodes .node-core {
    fill: rgba(188, 244, 255, 0.52);
    filter: url(#bp-signal-glow);
  }

  #s1-flow-particles circle {
    mix-blend-mode: screen;
    opacity: 0.95;
    filter: url(#bp-signal-glow);
  }

  #s1-flow-rings circle {
    fill: none;
    mix-blend-mode: screen;
    filter: url(#bp-signal-glow);
  }

  #s1-flashes circle {
    fill: none;
    stroke-width: 1.4;
    mix-blend-mode: screen;
    filter: url(#bp-signal-glow);
  }

  #s2-net-links path {
    fill: none;
    stroke: rgba(132, 228, 255, 0.36);
    stroke-width: 1.05;
    stroke-linecap: round;
    stroke-linejoin: round;
    filter: url(#bp-signal-glow);
  }

  #s2-net-nodes .node-outer {
    fill: none;
    stroke: rgba(170, 236, 255, 0.82);
    stroke-width: 1.1;
  }

  #s2-net-nodes .node-core {
    fill: rgba(170, 236, 255, 0.45);
  }

  #s2-flow-particles circle {
    mix-blend-mode: screen;
    opacity: 0.92;
    filter: url(#bp-signal-glow);
  }

  #s2-flow-rings circle {
    fill: none;
    mix-blend-mode: screen;
    filter: url(#bp-signal-glow);
  }

  #s2-flashes circle {
    fill: none;
    stroke-width: 1.2;
    mix-blend-mode: screen;
    filter: url(#bp-signal-glow);
  }
</style>

<script>
  import { initBlueprintBg } from '../scripts/blueprintBg'
  initBlueprintBg()
</script>
